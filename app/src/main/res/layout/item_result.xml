<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvQuestionNo"
            style="@style/MyTextView.Large"
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:background="@color/app_blue"
            android:textColor="@color/white"
            android:fontFamily="@font/titan_one"
            android:textStyle="bold"
            android:text="1"/>

        <TextView
            android:id="@+id/tvResultQuestion"
            style="@style/MyTextView.Large"
            android:layout_width="match_parent"
            android:textColor="@color/app_blue"
            android:textStyle="bold"
            tools:text="Which of the following is not a benefit of Kotlin ?" />

        <include layout="@layout/layout_divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/MyTextView.Medium"
                android:layout_width="wrap_content"
                android:text="Your Answer" />

            <TextView
                android:id="@+id/tvYourAns"
                style="@style/MyTextView.Medium"
                android:layout_width="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/drawable_button"
                android:backgroundTint="@color/green"
                android:paddingStart="12dp"
                android:paddingTop="4dp"
                android:paddingEnd="12dp"
                android:paddingBottom="4dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="Verbose" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                style="@style/MyTextView.Medium"
                android:layout_width="wrap_content"
                android:text="Correct Answer" />

            <TextView
                android:id="@+id/tvCorrectAns"
                style="@style/MyTextView.Medium"
                android:layout_width="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/drawable_button"
                android:backgroundTint="@color/green"
                android:paddingStart="12dp"
                android:paddingTop="4dp"
                android:paddingEnd="12dp"
                android:paddingBottom="4dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                tools:text="Verbose" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>