<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".ui.activities.PersonalDetailActivity"
    tools:ignore="HardcodedText">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="24dp"
            android:progress="50"
            android:progressDrawable="@drawable/drawable_progress" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <TextView
            style="@style/MyTextView.XLarge"
            android:text="Personal Detail"
            android:textStyle="bold" />

        <TextView
            style="@style/MyTextView.Medium"
            android:text="Fill your detail below" />

        <TextView
            android:id="@+id/tvNameEmailTitle"
            style="@style/MyTextView.Medium"
            android:layout_marginTop="36dp"
            android:text="Enter your name" />

        <EditText
            android:id="@+id/etNameEmail"
            style="@style/MyEditText.Medium"
            android:layout_marginTop="4dp"
            android:hint="Full Name" />

        <Button
            android:id="@+id/btnNextSubmit"
            style="@style/MyButton"
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:text="Next" />

    </LinearLayout>

</LinearLayout>